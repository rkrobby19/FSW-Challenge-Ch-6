<!DOCTYPE html>
<html lang="en">
    <%- include('partials/head') %>
    
    <body>
        <div class="container">
            <div class="main-body">
                <!-- Breadcrumb -->
                <!-- <nav aria-label="breadcrumb" class="main-breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item">
                            <a href="index.html">Home</a>
                        </li>
                        <li class="breadcrumb-item">
                            <a href="javascript:void(0)">User</a>
                        </li>
                        <li class="breadcrumb-item active" aria-current="page">
                            User Profile
                        </li>
                    </ol>
                </nav> -->
                <!-- /Breadcrumb -->

                <div class="row gutters-sm">
                    <div class="col-md-4 mb-3">
                        <div class="card">
                            <div class="card-body">
                                <div
                                    class="d-flex flex-column align-items-center text-center"
                                >
                                    <img
                                        src="https://bootdey.com/img/Content/avatar/avatar7.png"
                                        alt="Admin"
                                        class="rounded-circle"
                                        width="150"
                                    />
                                    <div class="mt-3">
                                        <h4><%= userData.userName %></h4>

                                        <p class="text-muted font-size-sm">
                                            <%= userData.email %>
                                        </p>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="card mt-3">
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-sm-6">
                                        <h6>Game History</h6>
                                    </div>
                                    <div class="col-sm-6">
                                        <a target="__blank" href="/users/<%= userData.id %> /user-game-history"
                                            >Edit
                                            <i class="fa-solid fa-pencil"></i
                                        ></a>
                                    </div>
                                </div>
                                <table class="table table-hover">
                                    <thead>
                                        <tr>
                                            <th scope="col">#</th>
                                            <th scope="col">Date</th>
                                            <th scope="col">Play Time</th>
                                            <th scope="col">Points</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% for (let i = 0; i<userGameHistory.length; i++) { %> 
                                        <tr>
                                            <th scope="row"><%= i %> </th>
                                            <td><%= userGameHistory[i].date %></td>
                                            <td><%= userGameHistory[i].playTime %></td>
                                            <td><%= userGameHistory[i].exp %> </td>
                                        </tr>
                                        <% } %>
                                            
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-8">
                        <div class="card mb-3">
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-sm-3">
                                        <h6 class="mb-0">Username</h6>
                                    </div>
                                    <div class="col-sm-9 text-secondary">
                                        <%= userData.userName %>
                                    </div>
                                </div>
                                <hr />
                                <div class="row">
                                    <div class="col-sm-3">
                                        <h6 class="mb-0">Full Name</h6>
                                    </div>
                                    <div class="col-sm-9 text-secondary">
                                        <%= userBiodata.firstName %> <%=
                                        userBiodata.lastName %>
                                    </div>
                                </div>
                                <hr />
                                <div class="row">
                                    <div class="col-sm-3">
                                        <h6 class="mb-0">
                                            Place, Date of Birth
                                        </h6>
                                    </div>
                                    <div class="col-sm-9 text-secondary">
                                        <%= userBiodata.location %>, <%=
                                        userBiodata.birthday %>
                                    </div>
                                </div>
                                <hr />

                                <div class="row">
                                    <div class="col-sm-3">
                                        <h6 class="mb-0">Gender</h6>
                                    </div>
                                    <div class="col-sm-9 text-secondary">
                                        <%= userBiodata.gender %>
                                    </div>
                                </div>
                                <hr />
                                <div class="row">
                                    <div class="col-sm-3">
                                        <h6 class="mb-0">Email</h6>
                                    </div>
                                    <div class="col-sm-9 text-secondary">
                                        <%= userData.email %>
                                    </div>
                                </div>
                                <hr />
                                <div class="row">
                                    <div class="col-sm-3">
                                        <h6 class="mb-0">Phone</h6>
                                    </div>
                                    <div class="col-sm-9 text-secondary">
                                        <%= userBiodata.phone %>
                                    </div>
                                </div>
                                <hr />
                                <div class="row">
                                    <div class="col-sm-12">
                                        <a
                                            class="btn btn-info"
                                            href="/users/<%= userData.id %>/edit-profile"
                                            >Edit</a
                                        >
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <%- include('partials/script') %>
    </body>
</html>
